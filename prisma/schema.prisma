generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native", "linux-musl-arm64-openssl-3.0.x"]
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model provinces {
  code                     String                 @id
  name                     String
  name_en                  String
  full_name                String
  full_name_en             String
  code_name                String
  administrative_region_id Int
  administrative_region    administrative_regions @relation(references: [id], fields: [administrative_region_id])
  administrative_unit      administrative_units   @relation(references: [id], fields: [administrative_unit_id])
  administrative_unit_id   Int
}

model wards {
  code                   String               @id
  name                   String
  name_en                String
  full_name              String
  full_name_en           String
  code_name              String
  district_code          String
  administrative_unit    administrative_units @relation(references: [id], fields: [administrative_unit_id])
  administrative_unit_id Int
}

model districts {
  code                   String               @id
  name                   String
  name_en                String
  full_name              String
  full_name_en           String
  code_name              String
  province_code          String
  administrative_unit    administrative_units @relation(references: [id], fields: [administrative_unit_id])
  administrative_unit_id Int
}

model administrative_units {
  id            Int         @id @default(autoincrement())
  full_name     String
  full_name_en  String
  short_name    String
  short_name_en String
  code_name     String
  code_name_en  String
  wards         wards[]
  districts     districts[]
  provinces     provinces[]
}

model administrative_regions {
  id           Int         @id @default(autoincrement())
  name         String
  name_en      String
  code_name    String
  code_name_en String
  provinces    provinces[]
}
